/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["projects/control-panel/src/app/presentation/components/*"],
      "@pages/*": ["projects/control-panel/src/app/presentation/pages/*"],
      "@ui-services/*": ["projects/control-panel/src/app/presentation/services"],
      "@infrastructure/*": ["projects/control-panel/src/app/infrastructure/*"],
      "@application/*": ["projects/control-panel/src/app/application/*"],
      "@domain/*": ["projects/control-panel/src/app/domain/*"],
      "@env/*": ["projects/control-panel/src/environments/*"],
      "@assets/*": ["projects/control-panel/src/assets/*"],
      "@presentation/*": ["projects/control-panel/src/app/presentation/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
